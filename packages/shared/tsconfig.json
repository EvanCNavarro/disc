{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true
	},
	"include": ["src/**/*.ts", "src/**/*.json"],
	"exclude": ["node_modules"]
}
